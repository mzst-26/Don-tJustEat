<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DontJustEat"
        android:fitsSystemWindows="true"
        android:name=".DontJustEatApplication">
        <activity
            android:name=".MainActivity"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".customer_login" />
        <activity android:name=".staff_login" />
        <activity android:name=".security.email_verification" />
        <activity android:name=".customer_booking" />
        <activity android:name=".customer_location_detail" />
        <activity android:name=".booking_summary" />
        <activity android:name=".booking_confirmation" />
        <activity android:name=".customer_profile" />
        <activity android:name=".my_bookings" />
        <activity android:name=".customer_my_notifications"/>
        <activity android:name=".admin_dashboard" />
        <activity android:name=".admin_notifications" />
        <activity android:name=".admin_profile" />
        <activity android:name=".admin_manage_menu" />
    </application>

</manifest>