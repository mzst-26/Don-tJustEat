<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DontJustEat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DontJustEat" parent="Base.Theme.DontJustEat" />


    <style name="don_tjustea">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="i_m_a_staff">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Primary buttons custom styles -->
    <style name="AppButton.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle"> normal</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <!-- Primary buttons custom styles (small) -->
    <style name="AppButton.Primary.Small" parent="Widget.Material3.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
<!--        <item name="android:paddingTop">9dp</item>-->
<!--        <item name="android:paddingBottom">9dp</item>-->
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle"> normal</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- A secondary button style -->
    <style name="AppButton.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="strokeColor">#EEEEEE</item>
        <item name="android:backgroundTint">#EEEEEE</item>
        <item name="android:textStyle"> normal</item>
        <item name="android:fontFamily"> Inter</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="text_title">
        <item name="android:fontFamily">Inter</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_normal">
        <item name="android:fontFamily">Inter</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_container">
        <item name="android:background">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="header_container">

    </style>

    <style name="search_subtitles">
       <item name="android:textColor">#99000000</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="BlackUnderlineInput" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_input_black_underline</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/inactive_grey</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:titleTextColor">@color/black</item>

    </style>

</resources>