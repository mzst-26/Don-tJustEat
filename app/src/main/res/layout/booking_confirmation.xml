<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/rootView">

    <include
        android:id="@+id/customer_menu"
        layout="@layout/customer_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/customer_menu">

        <!--Confirmation page container-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            >

            <!--Confirmation text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your booking request has been sent"
                android:gravity="center_vertical"
                style="@style/text_title"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                />

            <!--Acknowledgement text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A staff member will soon confirm the status of your booking"
                android:gravity="center_vertical"
                style="@style/text_normal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                />


            <!--divider-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#E6E6E6"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <!--Reference Container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:textAlignment="center"
                >
                <!--Reference lable-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Reference"
                    android:gravity="center_vertical"
                    android:layout_weight="0.5"
                    style="@style/text_normal"
                    android:textColor="#61000000"
                    android:textAlignment="center"
                    />
                <!--Reference number-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="#1234124182"
                    android:gravity="center_vertical"
                    style="@style/text_normal"
                    android:textColor="#61000000"
                    android:textAlignment="center"
                    />


            </LinearLayout>

            <!--Button containers-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">

                <!--View my Notifications Button -->
                <Button
                    android:id="@+id/navigate_to_notification"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="View my Notifications"
                    style="@style/AppButton.Primary"/>

                <!--View my Bookings Button -->
                <Button
                    android:id="@+id/navigate_to_bookings"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="View my bookings"
                    style="@style/AppButton.Primary"/>




            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>