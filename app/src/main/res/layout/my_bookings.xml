<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView">

    <!--Header-->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        >
        <!-- Back Button !-->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back Button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            />
        <!--location name-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Don'tJutEat"
            android:gravity="center_vertical"
            style="@style/text_title"
            />

    </LinearLayout>


    <!--divider-->
    <View
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E6E6E6"
        app:layout_constraintTop_toBottomOf="@+id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <include
        android:id="@+id/customer_menu"
        layout="@layout/customer_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/customer_menu"
        android:background="@color/white">
    <!--All the content will be added under this container to be scrollable-->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            app:layout_constraintTop_toBottomOf="@+id/divider_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <!--latest Booking Container -->
            <LinearLayout
                android:id="@+id/latest_booking_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pink_back_full_radius"
                >

                <!--logout container-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/active_grey"
                        android:text="#112345678"
                        style="@style/text_normal"
                        />

                </LinearLayout>

                <!--Image Slide container-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <!--Image  -->
                    <ImageView
                        android:id="@+id/customer_phone_edit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/restaurant_image"
                        />

                </LinearLayout>

                <!--Active Booking / last booking -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/latest_booking_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upcoming booking location"
                        style="@style/text_normal"
                        android:gravity="start"
                        android:layout_marginBottom="20dp"
                        />

                    <!--Time, Date and guest number container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="3"
                        >
                        <TextView
                            android:id="@+id/latest_booking_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:30"
                            android:layout_weight="1"
                            style="@style/text_normal"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:gravity="start"


                            />
                        <TextView
                            android:id="@+id/latest_booking_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14/08"
                            android:layout_weight="1"
                            style="@style/text_normal"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginRight="5dp"

                            />
                        <TextView
                            android:id="@+id/latest_booking_guest_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Guest(s)"
                            android:layout_weight="1"
                            style="@style/text_normal"
                            android:textStyle="bold"
                            android:gravity="end"

                            />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/location_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="14 Testinghom Ave, Plymouth PL1 1PL"
                        android:textColor="@color/active_grey"
                        android:layout_marginTop="20dp"
                        />

                </LinearLayout>


            </LinearLayout>


            <!--Title of the container-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Past Bookings"
                android:gravity="center"
                style="@style/text_normal"
                android:layout_marginTop="15dp"
                />

            <!--Cards container-->
            <LinearLayout
                android:id="@+id/past_booking_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="15dp"
                >


            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>