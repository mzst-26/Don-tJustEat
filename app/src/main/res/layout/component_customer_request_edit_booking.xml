<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:padding="20dp"
    android:background="@drawable/pink_back_minimum_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="20dp">

        <!--title -->
        <TextView
            android:id="@+id/tv_edit_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request an Edit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" />

        <!-- Date picker label -->
        <TextView
            android:id="@+id/tv_edit_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a date"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_title"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- datePicker (spinners) -->
        <DatePicker
            android:id="@+id/dp_edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:theme="@style/CustomDatePicker"
            android:datePickerMode="spinner" />

        <!-- Time label and selected display -->
        <TextView
            android:id="@+id/tv_edit_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select dining time"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/dp_edit_date"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_edit_time_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/dp_edit_date"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Time slider -->
        <com.google.android.material.slider.Slider
            android:id="@+id/slider_edit_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:valueFrom="0.0"
            android:valueTo="4.0"
            android:stepSize="1.0"
            android:value="1.0"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_time_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!--guest label and display -->
        <TextView
            android:id="@+id/tv_edit_guests_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of guests"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/slider_edit_time"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_edit_guests_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/slider_edit_time"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--guest slider -->
        <com.google.android.material.slider.Slider
            android:id="@+id/slider_edit_guests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:valueFrom="1.0"
            android:valueTo="10.0"
            android:stepSize="1.0"
            android:value="2.0"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_guests_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- buttons -->
        <LinearLayout
            android:id="@+id/edit_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/slider_edit_guests"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_edit_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                style="@style/AppButton.Primary.Small.black"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btn_edit_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Edit"
                android:padding="15dp"
                style="@style/AppButton.Primary.Small.Positive" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
