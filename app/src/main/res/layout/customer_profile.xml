<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView">
    <!--Header-->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        >
        <!-- Back Button !-->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back Button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            />
        <!--location name-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Don'tJutEat"
            android:gravity="center_vertical"
            style="@style/text_title"
            />

    </LinearLayout>


    <!--divider-->
    <View
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E6E6E6"
        app:layout_constraintTop_toBottomOf="@+id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <include
        android:id="@+id/customer_menu"
        layout="@layout/customer_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/customer_menu"
        android:background="@color/white">
        <!--All the content will be added under this container to be scrollable-->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/divider_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                >


                <FrameLayout
                    android:id="@+id/profile_image_container"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    >

                    <!-- Circular Image with placeholder -->
                    <ImageView
                        android:id="@+id/profile_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/profile_circle_mask"
                        android:padding="4dp" />

                    <!-- Small edit icon overlay -->
                    <ImageView
                        android:id="@+id/editIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit"
                        android:backgroundTint="@color/white"/>

                </FrameLayout>

                <!-- Name Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:minHeight="40dp"
                    >
                    <!--the displayed name -->
                    <TextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        style="@style/text_normal"
                        android:layout_marginRight="4dp"
                        />

                    <!--hidden editText for editing-->
                    <EditText
                        android:id="@+id/et_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:visibility="gone"
                        android:inputType="textPersonName"
                        android:layout_marginRight="4dp"
                        style="@style/text_normal"
                        />
                    <!--edit button for customer name -->
                    <ImageView
                        android:id="@+id/customer_name_edit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/edit_note"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        />

                </LinearLayout>

                <!--customer reference number -->
                <TextView
                    android:id="@+id/tv_customer_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#----"
                    android:gravity="center"
                    style="@style/text_normal"
                    android:textColor="#80000000"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:background="@drawable/pink_back_full_radius"
            >
            <!--phone number container-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center"

               >
               <!--phone number country code-->
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="+44"
                   android:gravity="center"
                   style="@style/text_normal"
                   />
               <!--phone number country code-->
               <TextView
                   android:id="@+id/tv_customer_phone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:gravity="center"
                   style="@style/text_normal"
                   />


               <!--hidden editText for editing the phone number-->
               <EditText
                   android:id="@+id/et_customer_phone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:visibility="gone"
                   android:inputType="phone"
                   android:layout_marginRight="4dp"
                   style="@style/text_normal"
                   />

               <!--edit button for customer name -->
               <ImageView
                   android:id="@+id/customer_phone_edit_button"
                   android:layout_width="wrap_content"
                   android:layout_height="19dp"
                   android:layout_gravity="center"
                   android:background="?attr/selectableItemBackgroundBorderless"
                   android:clickable="true"
                   android:focusable="true"
                   android:scaleType="centerCrop"
                   app:srcCompat="@drawable/edit_note"
                   android:layout_marginLeft="10dp"
                   android:padding="2dp"/>

           </LinearLayout>

            <!--notification preference -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="40dp"
                android:paddingBottom="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification Preferences"
                    android:gravity="center"
                    style="@style/text_title"
                    android:layout_marginBottom="20dp"
                    />


                <!--Preference item container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--text and toggle -->
                    <Switch
                        android:id="@+id/switch_offers_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Offers and discounts"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        />

                    <!--devider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#E6E6E6"
                        />

                </LinearLayout>

                <!--Preference item container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--text and toggle -->
                    <Switch
                        android:id="@+id/secondary_updates_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Secondary Updates"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/black"
                        />

                    <!--devider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#E6E6E6"
                        />

                </LinearLayout>

            </LinearLayout>

            <!--logout container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:paddingTop="24dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="80dp"
                >
                <LinearLayout
                    android:id="@+id/logout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/logout_icon"

                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Log Out"
                        android:paddingLeft="10dp"
                        style="@style/text_normal"
                        />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>



        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>