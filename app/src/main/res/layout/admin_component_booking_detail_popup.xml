<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_background_round"
    android:padding="24dp">

    <!-- Request Type Header -->
    <TextView
        android:id="@+id/popup_request_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Booking Request"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <!-- Customer Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Avatar -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/profile_circle_mask"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/popup_customer_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Customer avatar"
                app:srcCompat="@drawable/logo" />
        </FrameLayout>

        <!-- Customer Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/popup_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/popup_customer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional info"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Booking Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Table Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Table:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/popup_table_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table 5"
                android:textSize="15sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/popup_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30 PM"
                android:textSize="15sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/popup_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 29, 2025"
                android:textSize="15sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Party Size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Party Size:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/popup_party_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 guests"
                android:textSize="15sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Special Notes (optional, can be hidden if empty) -->
    <LinearLayout
        android:id="@+id/popup_notes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Notes:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/popup_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special dietary requirements or notes"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/popup_action_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Reject Button -->
        <Button
            android:id="@+id/popup_reject_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Reject"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/red_button"
            android:layout_marginEnd="8dp"
            style="@style/AppButton.Secondary"/>

        <!-- Accept Button -->
        <Button
            android:id="@+id/popup_accept_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Accept"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_button"
            android:layout_marginStart="8dp"
            style="@style/AppButton.Primary"/>
    </LinearLayout>

</LinearLayout>
