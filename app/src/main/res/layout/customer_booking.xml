<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:id="@+id/rootView"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--Header container-->
                    <LinearLayout
                        android:id="@+id/header_container"
                        style="@style/header_container"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/pink_back_no_radius"
                        app:layout_constraintTop_toTopOf="parent"
                        >



                        <!-- Search container !-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            style="@style/search_container"
                            android:background="@drawable/white_background_round"
                            >


                            <!-- Search Icon !-->
                            <ImageView
                                android:id="@+id/search_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:contentDescription="Search Icon"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/search" />

                            <!-- Search - Container for all texts !-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="2dp"
                                android:orientation="vertical"
                                android:layout_weight="1">


                                <!-- The title !-->
                                <TextView
                                    android:id="@+id/searched_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="left"
                                    android:textSize="19dp"
                                    android:text="Pick a location â†’"
                                    style="@style/text_normal"
                                    android:textColor="@color/black"/>


                                <!-- Container for the three subtitle texts !-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:orientation="horizontal"

                                    >
                                    <TextView
                                        android:id="@+id/searched_number_of_guests"
                                        style="@style/search_subtitles"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="5dp"
                                        android:gravity="center"
                                        android:text="" />

                                    <TextView
                                        android:id="@+id/searched_date"
                                        style="@style/search_subtitles"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="5dp"
                                        android:gravity="center"
                                        android:text="" />

                                    <TextView
                                        android:id="@+id/searched_time"
                                        style="@style/search_subtitles"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="5dp"
                                        android:gravity="center"
                                        android:text="" />


                                </LinearLayout>


                            </LinearLayout>


                            <!-- Search Icon !-->
                            <ImageView
                                android:id="@+id/edit_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:contentDescription="Edit Icon"
                                android:layout_marginRight="5dp"
                                app:srcCompat="@drawable/edit"
                                android:layout_weight="1"
                                />

                        </LinearLayout>


                    </LinearLayout>
                    <!-- Header Ended!-->


                    <!-- Map payout !-->
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@drawable/map"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="122dp"
                        app:layout_constraintTop_toBottomOf="@id/header_container"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Bottom Sheet List -->
                <LinearLayout
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/pink_back_top_radius"
                    android:clipToOutline="true"
                    android:overScrollMode="ifContentScrolls"
                    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                    >

                    <!--Handle-->
                    <RelativeLayout
                        android:id="@+id/handle_container"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        >

                        <View
                            android:layout_width="48dp"
                            android:layout_height="8dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/handle" />

                    </RelativeLayout>

