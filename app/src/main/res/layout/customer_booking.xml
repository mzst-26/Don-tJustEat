<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <!--Header container-->
    <LinearLayout
        style="@style/header_container"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/header_search_background"
        >



             <!-- Search container !-->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="horizontal"
                style="@style/search_container"
                android:background="@drawable/white_background_round"
                >


                <!-- Search Icon !-->
                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Search Icon"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/search" />

                 <!-- Search - Container for all texts !-->
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:minWidth="290dp"
                     android:layout_height="70dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginTop="2dp"
                     android:orientation="vertical">


                     <!-- The title !-->
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="2dp"
                         android:gravity="left"
                         android:text="Plymouth University"
                         android:textSize="19dp" />


                     <!-- Container for the three subtitle texts !-->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="left"
                         android:orientation="horizontal"

                         >

                         <TextView
                             style="@style/search_subtitles"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginEnd="12dp"
                             android:gravity="center"
                             android:text="Nov 2" />

                         <TextView
                             style="@style/search_subtitles"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginEnd="12dp"
                             android:gravity="center"
                             android:text="Table 1" />

                         <TextView
                             style="@style/search_subtitles"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginEnd="12dp"
                             android:gravity="center"
                             android:text="2 Guests" />

                     </LinearLayout>


                 </LinearLayout>


                 <!-- Search Icon !-->
                 <ImageView
                     android:id="@+id/edit_icon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     android:clickable="true"
                     android:contentDescription="Edit Icon"
                     android:layout_marginRight="5dp"
                     app:srcCompat="@drawable/edit" />

            </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>