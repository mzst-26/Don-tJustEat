<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:id="@+id/rootView"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Upper_container"
        >

    <!--Header-->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        >
        <!-- Back Button !-->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back Button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            />
        <!--location name-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Location Name"
            android:gravity="center_vertical"
            style="@style/text_title"
            />

    </LinearLayout>


    <!--divider-->
     <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E6E6E6"
        app:layout_constraintTop_toBottomOf="@+id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:maxHeight="450dp"
        app:layout_constraintTop_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/list">
        <LinearLayout
            android:id="@+id/top_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

       <!-- search container -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:background="@drawable/food_search_container"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            >
            <!--search icon-->
            <RelativeLayout
                android:id="@+id/search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clipToOutline="true"
                android:background="@drawable/search"
                android:layout_marginRight="10dp"

                />
            <!--search input-->
            <EditText
                android:id="@+id/foodSearchText"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textAutoCorrect"
                android:hint="Search your favorite food"
                android:padding="10dp"
                android:layout_margin="16dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textColorHint="#898585"

                />

        </LinearLayout>


        <!--location distance-->
        <LinearLayout
            android:id="@+id/location_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/search_container"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            >

            <!--location name-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="140dp"
                android:text="Location Name"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />

                <!-- Back Button !-->
                <ImageView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    app:srcCompat="@drawable/location_icon"
                    android:clickable="false"
                    android:focusable="false"

                    />

                <!--location distance text-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1.5 miles"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    style="@style/search_subtitles"
                    android:layout_margin="0dp"
                    android:textColor="@color/black"
                    />

        </LinearLayout>


        <!--Location Availability -->
        <LinearLayout
            android:id="@+id/location_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/location_distance"
            android:padding="20dp"
        >
            <!--Number of tables available-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black"
                />
            <!--Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ Tables available"
                android:textSize="16dp"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/book_table_button"
                style="@style/AppButton.Primary.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="Book a table now"
                android:textColor="@color/white"
       />


        </LinearLayout>


        <!--Restaurant Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/location_availability">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/restaurant_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />
        </LinearLayout>
        </LinearLayout>

    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
