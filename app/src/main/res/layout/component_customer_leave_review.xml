<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_review_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave a Review"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rating Label -->
    <TextView
        android:id="@+id/tv_rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate your experience"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_review_title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 5 Star Rating -->
    <LinearLayout
        android:id="@+id/ll_rating_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_rating_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_star_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_regular_empty"
            android:contentDescription="Star 1"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/iv_star_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_regular_empty"
            android:contentDescription="Star 2"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/iv_star_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_regular_empty"
            android:contentDescription="Star 3"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/iv_star_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_regular_empty"
            android:contentDescription="Star 4"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/iv_star_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_regular_empty"
            android:contentDescription="Star 5"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Review Description Label -->
    <TextView
        android:id="@+id/tv_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us about your experience"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ll_rating_stars"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Review Description Input -->
    <EditText
        android:id="@+id/et_review_description"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Share your thoughts..."
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@drawable/pink_back_minimum_radius"
        android:inputType="textMultiLine"
        android:textColorHint="@android:color/darker_gray"
        android:maxLines="5"
        android:textColor="@color/black"
        android:scrollbars="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_description_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

