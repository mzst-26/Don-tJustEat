<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <!--Header-->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <!-- Back Button !-->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back Button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            />
        <!--location name-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Location Name"
            android:gravity="center_vertical"
            style="@style/text_title"
            />

    </LinearLayout>

    <!--divider-->
    <View
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E6E6E6"
        app:layout_constraintTop_toBottomOf="@+id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <LinearLayout
        android:id="@+id/summary_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/divider_header"
        >
        

    <!--summary syb-container-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <!-- Table Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Table"
                style="@style/text_normal"/>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="20dp"
                >
                <TextView
                    android:id="@+id/tv_table_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Table 1"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    style="@style/text_normal"
                    />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_table_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:valueFrom="0.0"
                    android:valueTo="3.0"
                    android:stepSize="1.0"
                    android:value="0.0"
                    />

            </LinearLayout>
        </LinearLayout>
        
        <!--divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#E6E6E6"
            />





        <!--Dining Time Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Dining Time"
                style="@style/text_normal"/>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="20dp"
                >
                <TextView
                    android:id="@+id/tv_dining_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="18:00"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    style="@style/text_normal"
                    />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_dining_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:valueFrom="0.0"
                    android:valueTo="2.0"
                    android:stepSize="1.0"
                    android:value="0.0"
                    />

            </LinearLayout>
        </LinearLayout>

        <!--divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#E6E6E6"
            />



        <!--user name container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Name"
                style="@style/text_normal"/>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="20dp"
                >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:gravity="center"
                    android:paddingRight="20dp"
                    style="@style/text_normal"
                    />

            </LinearLayout>
        </LinearLayout>


        <!--user email container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Email"
                style="@style/text_normal"/>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="20dp"
                >
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:gravity="center"
                    android:paddingRight="20dp"
                    style="@style/text_normal"
                    />

            </LinearLayout>
        </LinearLayout>

        <!--user phone number container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Phone"
                style="@style/text_normal"/>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                >

                <!-- Country Code -->
                <TextView
                    android:id="@+id/country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+44"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    style="@style/text_normal"
                    />
                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:gravity="center"
                    android:paddingRight="20dp"
                    style="@style/text_normal"
                    android:textColorHint="@color/black"
                    />

            </LinearLayout>
        </LinearLayout>

        <!--divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#E6E6E6"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>



        <!--Location Summary-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"
            >

            <TextView
                android:id="@+id/location_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location Summary asfas asfasf asfasf asf asfasf fhab aksf ajsbuwe asoo is asf mamo asuhfw cknsw asloiw aosnfw lama siu"
                android:gravity="center"
                style="@style/text_normal"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Name"
                android:gravity="center"
                style="@style/text_title"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/location_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45, Somthing Road, City Name, PLS S11"
                android:gravity="center"
                style="@style/text_normal"
                android:paddingTop="20dp"
                />


            <!--map link button-->
            <Button
                android:id="@+id/location_map_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="View location on the map"
                android:gravity="center"
                style="@style/AppButton.Primary.Small"

                />


        </LinearLayout>

        <!--divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#E6E6E6"
            android:layout_marginTop="5dp"
            />


        <!--confirm booking-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/confirm_booking_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Confirm Booking"
                android:gravity="center"
                style="@style/AppButton.Primary"
                android:textSize="20dp"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>