<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- circular image -->
    <FrameLayout
        android:id="@+id/booking_avatar_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/profile_circle_mask"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/booking_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Booking avatar"
            app:srcCompat="@drawable/logo" />
    </FrameLayout>

    <!-- info block -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <!-- Name tv -->
        <TextView
            android:id="@+id/booking_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            style="@style/text_normal"/>

        <!-- Table number and time tv -->
        <TextView
            android:id="@+id/booking_table_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table 5 â€¢ 12:30 PM"
            android:textSize="14sp"
            android:textColor="#808080"
            android:gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- status -->
    <TextView
        android:id="@+id/booking_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrived"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        style="@style/text_normal"/>

</LinearLayout>
