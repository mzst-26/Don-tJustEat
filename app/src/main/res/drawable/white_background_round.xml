<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background color -->
    <solid android:color="#FFFFFF" />

    <!-- rounded corners -->
    <corners android:radius="10dp" />

     <!-- border -->
    <stroke
        android:width="0.5dp"
        android:color="#BDBDBD" />

    <!-- optional padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
